button-styles()
    width 12rem
    border-radius .3rem
    display flex
    font-weight 500
    align-items center
    justify-content center
    font-family PoppinsLight
    font-size $StandardFontSizer

.form-contact  
    
    &__send-button 
        button-styles()
        border none
        background-color $Geraldine
        color $White
        cursor pointer
        transition 0.2s ease all;

    &__send-button-image
        width 1rem
        height 1rem
        transform translateX(3rem)
    
    &__send-button:hover
        background-color $LightRed
        transition 0.2s ease all;
    
    &__human-verification 
        button-styles()
        flex-direction row-reverse
        background $WhiteSmoke
        gap 0rem 0.5rem

    &__checkbox
        width 1.2rem;
        height 1.2rem;
        accent-color $Geraldine