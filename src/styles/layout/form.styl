
.section-contact 
    display grid 
    width 100%
    height 100%
    align-items center

    .form-contact
        display grid
        width 100%
        height 60%
        font-family: PoppinsLight

        @media screen and (max-width: 1150px)
            height 90%

        &__span-error
            color: $LightRed
            position: absolute
            top: 14%
            left: 15%
            pointer-events: none

            @media screen and (max-width: 1250px)
                font-size: .8rem
                top: 20%
                left: 40%
                width: 180px
            
        @import "../components/select"
            
        @import "../components/input"

        @import "../components/textarea"

        &__send-form
            display flex
            height 50px
            justify-content space-between
            width 90%
            margin-top 2rem

            @media screen and (max-width: 1250px)
                flex-direction: column
                gap: 2rem
                height 120px
                width: 90%

        @import "../components/buttons"