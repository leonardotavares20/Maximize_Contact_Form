.side-menu
  display flex
  text-align end
  flex-direction: column
  align-items: end
  padding: 2rem 3rem 0rem 0rem
  gap: 3rem

  &__socials
    display: flex
    gap: 0.5rem
    list-style-type: none

  &__socials-icons
    filter: invert(47%) sepia(32%) saturate(397%) hue-rotate(331deg) brightness(121%) contrast(117%);

  &__socials-icons:hover
    filter: invert(47%) sepia(32%) saturate(4497%) hue-rotate(331deg) brightness(101%) contrast(117%);
  
  &__navigation
    display flex
    flex-direction column
    list-style-type none
    gap: .3rem

  &__navigation-link
    text-decoration: none
    color: $Black
    font-family: PoppinsLight

  &__submenu 
    position relative
    margin-top: .7rem
    font-size: .9rem

   &__submenu::before
    content: ""
    position: absolute
    width: 1rem
    height: 1px
    background: $Geraldine
    top: -7px
    right: 0